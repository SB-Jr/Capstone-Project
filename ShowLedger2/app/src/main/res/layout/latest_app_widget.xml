<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_item_height"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:text="@string/widget_text"
        android:paddingStart="@dimen/widget_margin_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/widget_item_divider"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:background="#60000000"
        android:dividerHeight="@dimen/widget_item_divider"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_empty"/>
</LinearLayout>